= content_for :breadcrumb do
  &gt;
  = link_to "Experimente", experiments_path
  &gt;
  = link_to @experiment.name, experiment_path(@experiment)
  &gt;
  Sessions

%h3
  = @experiment.name  


= render :partial => "experiments/tabs", :locals => {:selected => "Sessions"}

%br
%br
%br
= button_to 'Neue Session anlegen', new_experiment_session_path(@experiment), :method => :get
%br

- @sessions.each do |session| 
  .sessionline
    /%a{:href=>edit_experiment_session_path(@experiment, session)}
    .right
      =button_to "Duplizieren", duplicate_experiment_session_path(@experiment, session)
      =button_to "Bearbeiten", edit_experiment_session_path(@experiment, session), :method => :get
      =button_to "Löschen", experiment_session_path(@experiment, session), :method => :delete
      %br
      
      
    .left
      %b
        =session.start_at.to_date
        =session.start_at.strftime("%H:%M")+"-"+session.end_at.strftime("%H:%M")
      
      %br
      =truncate(session.location.name, :length => 40) if session.location
      
      %br
      zugeordnet
      =session.participations.count
      | registriert
      =session.participations.where("participations.session_id IS NOT NULL").count
      | showup todo
      | teilgenommen todo
      %br
        
        
      
    
%br
