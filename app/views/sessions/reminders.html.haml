= content_for :breadcrumb do
  = render :partial => "layouts/crumb", :object => [           |
      link_to("Experimente", experiments_path),                |
      link_to(@experiment.name,experiment_sessions_path(@experiment)), |
      "Sessions"]
      

= render :partial => "experiments/enrollment"
  
%h1
  = @experiment.name


= render :partial => "experiments/tabs", :locals => {:selected => "Sessions"}

= link_to "Zurück zur Session-Übersicht", experiment_sessions_path(@experiment), :class => "btn"

%br
%br
%h2
  Session am
  = @session.time_str
%br

= render :partial => "sessions/tabs", :locals => {:selected => "Session-Erinnerung"}


= form_for @session, :url => {:action => "reminders"}, :html => {:method => :post, :class => "guarded_form"} do |f|
  %h3
    E-Mail zur Erinnerung für diese Session
  
  %br  
    
  = f.check_box :reminder_enabled, :id => "reminder_check"
  automatischen Erinnerungsversand für diese Session aktivieren
  %br
  %br
  .subpart
    Der Versand der Erinnerungen soll
    = f.text_field :reminder_hours, :class => 'span1'
    Stunden vor dem Beginn der jeweiligen Session erfolgen.
    %br
    Betreff
    %br
    = f.text_field :reminder_subject, :class => "span8"
    %br
    %br


    .templated-field-header.span8 
      = render :partial => 'shared/text_templates', :locals => {:data => current_user.settings.templates, :element_id => 'session_reminder_text' }
      = render :partial => 'shared/text_insertions', :locals => {:data => ['#firstname', '#lastname', '#session_date', '#session_start_time', '#session_end_time', '#session_location'], :element_id => 'session_reminder_text' }

      Erinnerungstext
    = f.text_area :reminder_text, :rows => 5, :class => "span8"
    %br
    %br
  = f.submit "Erinnerungseinstellungen speichern", :name => "test", :class => "guarded_form_save btn btn-primary"
  
 
   
        
    	
    