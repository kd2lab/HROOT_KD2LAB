=t 'search.date.from'
= text_field_tag "search[#{name}][from]",
       (params[:search][name] || {})[:from],
       :class => "span2 datepicker",
       :'data-date-format' => I18n.t('date.datepicker'),
       :'data-date-min-view-mode' => 1
=t 'search.date.to'
  
= text_field_tag "search[#{name}][to]",
       (params[:search][name] || {})[:to],
       :class => "span2 datepicker",
       :'data-date-format' => I18n.t('date.datepicker'),
       :'data-date-min-view-mode' => 1
       

  