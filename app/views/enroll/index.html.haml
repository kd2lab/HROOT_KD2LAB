= content_for :breadcrumb do
  %ul.breadcrumb
    %li
      =link_to t('login_area'), :controller => "account", :action => "index"
      %span.divider
        &gt;
    %li.active
      =t '.new_enrollment'


%h3=t '.new_enrollment'

- if @available_sessions.count > 0
  =t '.available_sessions'
  %br
  %br

  = form_tag enroll_confirm_path do
    
    %table.table
      - @available_sessions.each do |s|
        %tr
          %td
            = radio_button_tag "session", "#{s.id}" 
          %td
            %b= s.time_str
            = s.location.name if s.location
            
            - if s.following_sessions.count > 0
              %br
              - s.following_sessions.each do |f|  
                %b= f.time_str 
                =f.location.name if f.location
                %br
            %br
            
            - unless s.limitations.blank?
              %b
                =t('enroll.notes')+':' 
              %br
              = s.limitations
              %br
              %br
      
            - if s.following_sessions.count > 0
              .alert.alert-block
                %b=t 'enroll.alert1' 
                %br
                =t 'enroll.alert2'
                %br
    
    = submit_tag t('.register_for_sessions'), :class => "btn btn-primary"
    
    
- else    
  =t '.no_sessions_available'
  