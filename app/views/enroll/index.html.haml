= content_for :breadcrumb do
  %ul.breadcrumb
    %li
      =link_to t('login_area'), :controller => "account", :action => "index"
      %span.divider
        &gt;
    %li.active
      =t '.new_enrollment'


%h3=t '.new_enrollment'

- if @ungrouped_sessions.count > 0
  =t '.available_sessions'
  %br
  %br


  = form_tag enroll_confirm_path do
    
    %table.table
      - @ungrouped_sessions.each do |s|
        %tr
          %td
            = radio_button_tag "choice", "session,#{s.id}"
          %td
            %b= s.time_str
            = s.location.name if s.location
            
            %br
            
            - unless s.limitations.blank?
              %b
                =t('enroll.notes')+':' 
              %br
              = s.limitations
              %br
              %br
          %td
      - @session_groups.each do |group|
        %tr
          %td
            = radio_button_tag "choice", "group,#{group.id}" 
          %td
            - group.sessions.each do |s| 
              %b= s.time_str
              = s.location.name if s.location
              %br
            %br
          %td
            .well
              - if group.is_randomized?
                If you choose this group of sessions, you will be randomly assigned to one of the sessions.
              - else
                If you choose this group of sessions, you will have to attend all of the sessions.

    = submit_tag t('.register_for_sessions'), :class => "btn btn-primary"
    
    
- else    
  =t '.no_sessions_available'
  