%table.table
  %thead
    %tr
      %th Name  
      %th 
  %tbody      
    - @studies.each do |study| 
      %tr
        %td= truncate(study.name, :maxlength => 30)
        %td
          = link_to 'Bearbeiten', edit_study_path(study), :class => "btn btn-primary"
          = link_to 'Löschen', study, :confirm => 'Sind Sie sich sicher, dass Sie diesen Studiengang entfernen möchten?', :method => :delete, :class => "btn"
  
