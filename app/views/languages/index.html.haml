= render :partial => "language_tab"

%br

= link_to "Neue Sprache anlegen", new_language_path, :class => "btn btn-primary"

%br
%br

%table.table
  %thead
    %tr
      %th Name  
      %th 

  %tbody
    - @languages.each do |language| 
      %tr
        %td= truncate(language.name, :maxlength => 30)
        %td
          = link_to 'Bearbeiten', edit_language_path(language), :class => "btn btn-primary"
          = link_to 'Löschen', language, :confirm => 'Sind Sie sich sicher, dass Sie diese Sprache entfernen möchten?', :method => :delete, :class => "btn"
  
%br

