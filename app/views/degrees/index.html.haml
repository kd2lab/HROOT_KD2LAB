%table.table
  %thead
    %tr
      %th Name  
      %th 
  %tbody      
    - @degrees.each do |degree| 
      %tr
        %td= truncate(degree.name, :maxlength => 30)
        %td
          = link_to t(:edit), edit_degree_path(degree), :class => "btn btn-primary"
          = link_to t(:delete), degree, :confirm => t('degrees.confirm'), :method => :delete, :class => "btn"
  
