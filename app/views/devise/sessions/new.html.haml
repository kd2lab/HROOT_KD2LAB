= content_for :breadcrumb do
  &gt;
  = link_to "Startseite", root_path
  &gt;
  Login

%h2 Login

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %p
    = f.label :email 
    %br
    = f.email_field :email

  %p
    = f.label :password
    %br
    = f.password_field :password 

  %p= f.submit "Login"


= render :partial => "devise/shared/links" 