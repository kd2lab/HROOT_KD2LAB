= content_for :breadcrumb do
  %ul.breadcrumb
    %li
      = link_to t(:root_page), root_path
      %span.divider
        &gt;
    %li.active
      =t '.breadcrumb_login' 

.row
  .span4
    %h1=t '.login'
    %p=t '.for_registered_users'
    %br
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.label :email 
      = f.email_field :email

      = f.label :password
      = f.password_field :password 

      %br
      = f.submit t('.login_link'), :class => "btn btn-primary"

  .span4
    = render :partial => "devise/shared/links" 