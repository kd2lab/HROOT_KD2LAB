= content_for :breadcrumb do
  %ul.breadcrumb
    %li
      =link_to t(:administration), :controller => "admin", :action => "index"
      %span.divider
        &gt;
    %li.active
      =t :settings
  
= render :partial => "tabs", :locals => {:selected => :emails} 


= form_tag options_emails_path, :method => "post", :class => "guarded_form form-horizontal", :'data-alert' => t('guarded_form_message') do
  %table.table.accordion  
    %tr
      %td 
        %h4
          %i.icon-chevron-right
          =t '.header1'
          
        .toggle
          %br
          =t(:subject)
          %br
          = text_field_tag :invitation_subject, Settings.invitation_subject, :class => "span10"
          %br
          %br

          .templated-field-header.span10 
            = render :partial => 'shared/text_insertions', :locals => {:data => ['#firstname', '#lastname', '#sessionlist_de', '#sessionlist_en', '#link'], :element_id => 'invitation_text' }

            =t '.text'
            
          = text_area_tag :invitation_text, Settings.invitation_text, :rows => 10, :class => "span10"
          %br
          %br
    %tr
      %td  
        %h4
          %i.icon-chevron-right
          =t '.header2'
          
        .toggle
          %br
          =t(:subject)
          %br
          = text_field_tag :confirmation_subject, Settings.confirmation_subject, :class => "span10"
          %br
          %br

          .templated-field-header.span10
            = render :partial => 'shared/text_insertions', :locals => {:data => ['#firstname', '#lastname', '#session_date_de',  '#session_date_en', '#session_start_time', '#session_end_time', '#session_location', '#sessionlist_de', '#sessionlist_en'], :element_id => 'confirmation_text' }

            =t '.text'
  
          = text_area_tag :confirmation_text, Settings.confirmation_text, :rows => 10, :class => "span10"
          %br
          %br
    %tr
      %td  
        %h4
          %i.icon-chevron-right
          =t '.header3'
          
        .toggle
          %br
          =t(:subject)
          %br
          = text_field_tag :reminder_subject, Settings.reminder_subject, :class => "span10"
          %br
          %br

          .templated-field-header.span10
            = render :partial => 'shared/text_insertions', :locals => {:data => ['#firstname', '#lastname', '#session_date_de',  '#session_date_en', '#session_start_time', '#session_end_time', '#session_location'], :element_id => 'reminder_text' }

            =t '.text'
  
          = text_area_tag :reminder_text, Settings.reminder_text, :rows => 10, :class => "span10"
          %br
          %br
    %tr
      %td  
        %h4
          %i.icon-chevron-right
          =t '.header4'
          
        .toggle
          %br
          =t(:subject)
          %br
          = text_field_tag :session_finish_subject, Settings.session_finish_subject, :class => "span10"
          %br
          %br

          .templated-field-header.span10
            = render :partial => 'shared/text_insertions', :locals => {:data => ['#experiment_name', '#session_date_de',  '#session_date_en', '#session_start_time', '#session_end_time'], :element_id => 'session_finish_text' }

            =t '.text'
            
          = text_area_tag :session_finish_text, Settings.session_finish_text, :rows => 10, :class => "span10"
          %br
          %br
    
    %tr
      %td  
        %h4
          %i.icon-chevron-right
          =t '.header5'
          
        .toggle
          %br
          =t(:subject)
          %br
          = text_field_tag :import_invitation_subject, Settings.import_invitation_subject, :class => "span10"
          %br
          %br

          .templated-field-header.span10
            = render :partial => 'shared/text_insertions', :locals => {:data => ['#firstname', '#lastname', '#activation_link'], :element_id => 'import_invitation_text' }
            
            =t '.text'
  
          = text_area_tag :import_invitation_text, Settings.import_invitation_text, :rows => 10, :class => "span10"
          %br
          %br
    
  = submit_tag t(:save), :name => "test", :class => "guarded_form_save btn btn-primary"
  

   
        
    	
    