= content_for :breadcrumb do
  = render :partial => "layouts/crumb", :object => [           |
      link_to(t('administration'), :controller => "admin", :action => "index"), |
      link_to(t(:experiments_header), experiments_path),                |
      link_to(@experiment.name,experiment_sessions_path(@experiment)), |
      t(:experimenters_header)]



#state= render :partial => "experiments/enrollment"
  
%h1
  = @experiment.name

= render :partial => "tabs", :locals => {:selected => :options} 

%h3=t :experimenters_header
%br

= simple_form_for @experiment,:url => '', :html => {:method => :post, :class => "guarded_form form-horizontal"} do |f| 
  
  
  %table#usertable.table{:'data-rights' => ExperimenterAssignment.right_list.to_json, :'data-rights-label' => I18n.t(:rights_label)}
    - @experiment.experimenter_assignments.each do |assign|
      %tr.removable{:'data-id' => assign.user_id}
        %td
          = hidden_field_tag 'user_submitted[]', assign.user_id
          = "#{assign.user.lastname}, #{assign.user.firstname}"
        %td
          - rights = options_for_select(ExperimenterAssignment.right_list, assign.rights.split(','))
          = select_tag("rights[#{assign.user_id}][]", rights, {:class => "chzn-select", :multiple => true, :style => "width:600px", :'data-placeholder' => t(:rights), :include_blank => true})
          %button.close.removeline{:href => '#'} &times;
    %tr
      %td
        - options = options_for_select(User.where("role = 'admin' OR role='experimenter'").where(:deleted => false).order(:lastname, :firstname).collect do |u| [u.lastname+", "+u.firstname, u.id] end)
        = select_tag(:add_user, options, {:class => "chzn-select", :'data-placeholder' => t('.add_people'), :include_blank => true})
      %td
        
  = f.submit t(:save_changes), :class => "guarded_form_save btn btn-primary"
  
  %br
  %br
  %br