%ul.nav.nav-tabs
  %li{:class => if selected == 'Sessions' then 'active' else '' end}= link_to "Sessions", experiment_sessions_path(@experiment)
  
  - if current_user.has_right? @experiment, 'manage_participants'
    %li.dropdown{:class => if selected == 'Teilnehmer' then 'active' else '' end}
      %a.dropdown-toggle{:'data-toggle' => 'dropdown', :href => '#'}
        Teilnehmer
        %b.caret
      %ul.dropdown-menu
        %li= link_to "Neue Teilnehmer zuordnen", manage_experiment_participants_path(@experiment)
        %li= link_to "Bereits zugeordnete Teilnehmer", experiment_participants_path(@experiment)
  
  -if can?(:invitation, @experiment)
    %li.dropdown{:class => if selected == 'Einladungen' then 'active' else '' end}
      %a.dropdown-toggle{:'data-toggle' => 'dropdown', :href => '#'}
        Einladungen
        %b.caret
      %ul.dropdown-menu
        %li= link_to "E-Mail-Texte", mail_experiment_path(@experiment)
        %li= link_to "Einladungsversand", invitation_experiment_path(@experiment)

  /- if can? :edit, @experiment
  /  %li{:class => if selected == 'Allgemeine Daten' then 'active' else '' end}= link_to "Allgemeine Daten", edit_experiment_url(@experiment)
  
  - if can?(:edit, @experiment) || can?(:experimenters, @experiment)
    %li.dropdown{:class => if selected == 'Daten und Einstellungen' then 'active' else '' end}
      %a.dropdown-toggle{:'data-toggle' => 'dropdown', :href => '#'}
        Daten und Einstellungen
        %b.caret
      %ul.dropdown-menu
        -if can?(:edit, @experiment)
          %li= link_to "Allgemeine Daten", edit_experiment_url(@experiment)
          %li= link_to "Experiment-Erinnerung", reminders_experiment_path(@experiment)
        - if can? :experimenters, @experiment
          %li= link_to "Experimentatoren", experimenters_experiment_path(@experiment)
  
  
