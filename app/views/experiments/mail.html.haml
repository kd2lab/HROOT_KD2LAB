= content_for :breadcrumb do
  = render :partial => "layouts/crumb", :object => [           |
      link_to("Experimente", experiments_path),                |
      link_to(@experiment.name,experiment_sessions_path(@experiment)), |
      "Mailtexte"]
      
= render :partial => "experiments/enrollment"

%h1
  = @experiment.name
      
= render :partial => "tabs", :locals => {:selected => "Einladungen"} 


= form_for @experiment, :url => {:action => "mail"}, :html => {:method => :post, :class => "guarded_form"} do |f|
  %table.table.accordion  
    %tr
      %td 
        %i.icon-chevron-right.btn-mini.accordion-icon
           
        %h3
          E-Mail zur Einladung
        .toggle
          %br
          Betreff
          %br
          = f.text_field :invitation_subject, :class => "span8"
          %br
          %br

          .templated-field-header.span10 
            = render :partial => 'shared/text_templates', :locals => {:data => current_user.settings.templates, :element_id => 'experiment_invitation_text' }
            = render :partial => 'shared/text_insertions', :locals => {:data => ['#firstname', '#lastname', '#sessionlist', '#link'], :element_id => 'experiment_invitation_text' }

            Einladungstext
          = f.text_area :invitation_text, :rows => 5, :class => "span8"
          %br
    %tr
      %td  
        %i.icon-chevron-right.btn-mini.accordion-icon
        
        %h3
          E-Mail zur Anmeldebestätigung
        .toggle
          %br
          Betreff
          %br
          = f.text_field :confirmation_subject, :class => "span8"
          %br
          %br

          .templated-field-header.span10
            = render :partial => 'shared/text_templates', :locals => {:data => current_user.settings.templates, :element_id => 'experiment_confirmation_text' }
            = render :partial => 'shared/text_insertions', :locals => {:data => ['#firstname', '#lastname', '#sessionlist'], :element_id => 'experiment_confirmation_text' }

            Bestätigungstext
  
          = f.text_area :confirmation_text, :rows => 5, :class => "span8"
          %br
          %br
    
  = f.submit "Mailtexte speichern", :name => "test", :class => "guarded_form_save btn btn-primary"
  

   
        
    	
    